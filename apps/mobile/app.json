{
  "expo": {
    "name": "VolleyCoach",
    "slug": "volleycoach",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "volleycoach",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.volleycoach.app",
      "newArchEnabled": true,
      "infoPlist": {
        "NSCameraUsageDescription": "VolleyCoach needs camera access to live stream games and take photos.",
        "NSMicrophoneUsageDescription": "VolleyCoach needs microphone access to live stream games with audio.",
        "NSPhotoLibraryUsageDescription": "VolleyCoach needs photo library access to upload game videos for AI analysis."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "package": "com.volleycoach.app",
      "newArchEnabled": true,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow VolleyCoach to access your camera to live stream games.",
          "microphonePermission": "Allow VolleyCoach to access your microphone for live streaming.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#4F46E5"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
